<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:contentPadding="@dimen/large_margin_padding"
        app:contentPaddingTop="@dimen/very_large_margin_padding"
        app:contentPaddingBottom="@dimen/very_large_margin_padding"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardBackgroundColor="@color/primary_color"
        app:cardElevation="@dimen/card_eleveation">

        <TextView
            android:id="@+id/tv_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/genre_placeholder"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>